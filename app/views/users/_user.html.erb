<tr>
	<td><%= gravatar_for user, :size => 30 %></td>
  	<td><%= user.name %></td>
  	<td><%= user.email %></td>

	<% if current_user.admin? %>
  	<td><%= link_to 'Show', user %></td>
  	<td><%= link_to 'Edit', edit_user_path(user) %></td>
  	<td><%= link_to 'delete', user, :method => :delete,
									:confirm => 'Are you sure?', 
									:title => "Delete #{user.name}" %></td>
	<% end %>
</tr>
